---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <!-- <p>Published on {frontmatter.pubDate.slice(0, 10)}</p> -->
    <p class="container-title-date"><span>{frontmatter.description}</span><span>{frontmatter.dates}</span></p>
    <!-- <p>Written by {frontmatter.author}</p> -->
    {frontmatter.image?.url && <img src={frontmatter.image.url} width={frontmatter.image.width} alt={frontmatter.image.alt} />}
    <slot />
</BaseLayout>